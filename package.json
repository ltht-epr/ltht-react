{
  "name": "@ltht-react/monorepo",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@ltht-react/table": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@emotion/eslint-plugin": "^11.7.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.2",
    "@types/async": "^3.0.3",
    "@types/classnames": "^2.2.10",
    "@types/domhandler": "^2.4.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "async": "^3.1.0",
    "await-exec": "^0.1.2",
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^7.0.0",
    "jest": "^26.6.3",
    "lerna": "^5.1.0",
    "lerna-update-wizard": "^1.1.2",
    "mkdirp-promise": "^5.0.1",
    "nx": "14.2.0",
    "prettier": "^2.0.0",
    "prettylint": "^1.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.0.0",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && nx run-many --all --target=build",
    "build:storybook": "nx build:storybook @ltht-react/storybook",
    "build": "nx run-many --all --target=build",
    "build:slow": "nx run-many --all --target=build --parallel=1",
    "build:nocache": "nx run-many --all --target=build --skip-nx-cache",
    "clean": "nx run-many --all --target=clean",
    "create:clinical": "node ./scripts/createComponent.js clinical",
    "create:styled": "node ./scripts/createComponent.js styled",
    "deploy:npm": "lerna publish from-package",
    "deploy:storybook": "nx deploy:storybook @ltht-react/storybook",
    "doc:components": "nx run-many --all --target=docs",
    "lint": "yarn lint:pretty && yarn lint:eslint",
    "lint:eslint": "eslint \"./{components,packages}/**/src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:eslint:fix": "eslint \"./{components,packages}/**/src/**/*.{ts,tsx}\" --max-warnings=0 --fix",
    "lint:pretty": "prettylint './{components,packages}/**/src/**/*.{ts,tsx}'",
    "new:version": "lerna version --conventional-commits --yes",
    "new:version:patch": "lerna version patch --yes",
    "new:version:minor": "lerna version minor --yes",
    "new:version:major": "lerna version major --yes",
    "new:version:interactive": "lerna version",
    "predeploy:storybook": "yarn build:storybook",
    "start:debug": "cd packages/storybook && yarn start:debug",
    "start": "cd packages/storybook && yarn start",
    "test:unit": "jest",
    "test": "yarn test:unit",
    "type:check": "nx run-many --all --target=type:check",
    "type:gen": "nx type:gen @ltht-react/types && nx run @ltht-react/types:build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltht-epr/ltht-react.git"
  },
  "author": "LTHT",
  "bugs": {
    "url": "https://github.com/ltht-epr/ltht-react/issues"
  },
  "homepage": "https://github.com/ltht-epr/ltht-react#readme",
  "workspaces": [
    "packages/*",
    "components/**"
  ]
}
